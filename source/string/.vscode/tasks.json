{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "build tests",
			"command": "/usr/bin/gcc",
			"args": [
				"-o",
				"${workspaceFolder}/../bin/string_tests",
				"${workspaceFolder}/*.c"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: gcc"
		},
		{
			"type": "cppbuild",
			"label": "debug tests",
			"command": "/usr/bin/gcc",
			"args": [
				"-g3",
				"-o",
				"${workspaceFolder}/../bin/string_tests",
				"${workspaceFolder}/*.c"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: gcc"
		},
		{
			"type": "cppbuild",
			"label": "make so",
			"command": "/usr/bin/gcc",
			"args": [
				"-shared",
				"-fpic",
				"-o",
				"${workspaceFolder}/../lib/lib_string.so",
				"${workspaceFolder}/string.c"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: gcc"
		},
		{
			"type": "cppbuild",
			"label": "debug so",
			"command": "/usr/bin/gcc",
			"args": [
				"-g3",
				"-o",
				"${workspaceFolder}/../bin/shared_string",
				"${workspaceFolder}/test.c",
				"-l_string"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: gcc"
		}
	]
}